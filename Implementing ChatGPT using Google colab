- from openai import OpenAI

client = OpenAI()

print("ChatGPT AI â€” type 'exit' to quit\n")

while True:
    user_input = input("You: ")
    if user_input.lower() in ["exit", "quit"]:
        break

    response = client.responses.create(
        model="gpt-4.1-mini",
        input=user_input
    )

    print("AI:", response.output_text)
